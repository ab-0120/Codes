///////////////////////////////////////////////////////////////////////////////   FCFS
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
        
    int pos;
    scanf("%d",&pos);
    
    int total=0;
    float avg=0.0;
    for(int i=0;i<n;i++)
    {
       total += abs(pos-arr[i]);
       pos=arr[i];
    }

    avg=total/n;
    printf("%d ",total);
    printf("%.2f",avg);
    return 0;
}

///////////////////////////////////////////////////////////////////////////////// SSTF
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
    
    int pos;
    scanf("%d",&pos);
    
    // SSTF logic
    
    int count=0;
    int total=0,min, index;
    float avg=0.0;
    
    while(count<n)
    {
        min=1000;
        
        for(int i=0;i<n;i++)
        {
            if(arr[i]!=-10 && min> abs(pos-arr[i]))
            {
                min= abs(pos - arr[i]);
                index=i;
            }
        }
        printf("%d ",arr[index]);
        
        total+= abs(pos- arr[index]);
        pos= arr[index];
        arr[index]=-10;
        
        count++;
    }
    avg=total/n;
    
    printf("\n %d %.2f",total, avg);

    return 0;
}

///////////////////////////////////////////////////////////////////////////////// SCAN
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
    
    int head;
    scanf("%d",&head);
    
    int size;
    scanf("%d",&size);
    
    int move;
    scanf("%d",&move);
    
    // SCAN logic
    
    int count= head;
    int total=0, index;
    double avg=0.0;
    
    if(move==1)
    {
       total += ((size-1)-head);
       head = size-1;
       
       int min=arr[0];
       for(int i=0;i<n;i++) // for calculating minimum
       {
           if(arr[i]<min)
           {
               min=arr[i];
               index=i;
           }
       }
       
       if(min<count)
         total += (head-arr[index]);
    }
    
    else{
        total += (head-0);
        head=0;
        
        int max=arr[0];
        for(int i=0;i<n;i++) // for calculating maximun
        {
           if(arr[i]>max)
           {
               max=arr[i];
               index=i;
           }
        }
        
        if(max>count)
           total+= arr[index];
    }
    avg=total/n;
    
    printf("%d %lf",total,avg);

    return 0;
}

