///////////////////////////////////////////////////////////////////////////////   FCFS
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
        
    int pos;
    scanf("%d",&pos);
    
    int total=0;
    float avg=0.0;
    for(int i=0;i<n;i++)
    {
       total += abs(pos-arr[i]);
       pos=arr[i];
    }

    avg=total/n;
    printf("%d ",total);
    printf("%.2f",avg);
    return 0;
}

///////////////////////////////////////////////////////////////////////////////// SSTF
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
    
    int pos;
    scanf("%d",&pos);
    
    // SSTF logic
    
    int count=0;
    int total=0,min, index;
    float avg=0.0;
    
    while(count<n)
    {
        min=1000;
        
        for(int i=0;i<n;i++)
        {
            if(arr[i]!=-10 && min> abs(pos-arr[i]))
            {
                min= abs(pos - arr[i]);
                index=i;
            }
        }
        printf("%d ",arr[index]);
        
        total+= abs(pos- arr[index]);
        pos= arr[index];
        arr[index]=-10;
        
        count++;
    }
    avg=total/n;
    
    printf("\n %d %.2f",total, avg);

    return 0;
}

///////////////////////////////////////////////////////////////////////////////// SCAN
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
    
    int head;
    scanf("%d",&head);
    
    int size;
    scanf("%d",&size);
    
    int move;
    scanf("%d",&move);
    
    // SCAN logic
    
    int count= head;
    int total=0, index;
    double avg=0.0;
    
    if(move==1)
    {
       total += ((size-1)-head);
       head = size-1;
       
       int min=arr[0];
       for(int i=0;i<n;i++) // for calculating minimum
       {
           if(arr[i]<min)
           {
               min=arr[i];
               index=i;
           }
       }
       
       if(min<count)
         total += (head-arr[index]);
    }
    
    else{
        total += (head-0);
        head=0;
        
        int max=arr[0];
        for(int i=0;i<n;i++) // for calculating maximun
        {
           if(arr[i]>max)
           {
               max=arr[i];
               index=i;
           }
        }
        
        if(max>count)
           total+= arr[index];
    }
    avg=total/n;
    
    printf("%d %lf",total,avg);

    return 0;
}

////////////////////////////////////////////////////// LOOK
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
       
    int head;
    scanf("%d",&head);
    
    int move;
    scanf("%d",&move);
    
    // LOOK logic
    
    int min,max;
    min=max=arr[0];
    
    for(int i=0;i<n;i++)
    {
        if(arr[i]>max)
          max=arr[i];
        if(arr[i]<min)
          min=arr[i];
    }
    
    int total=0;
    float avg =0.0;
    int cover=head;
    
    // check according to direction
    if(move==1)
    {
        total += (max-head);
        head=max;
        
        if(min<cover)
           total+=(head-min);
    }
    
    if(move==0)
    {
        total += (head-min);
        head=min;
        
        if(max>cover)
           total+=(max-head);
    }
    
    avg=total/n;
    
    printf("%d %.2f",total, avg);
    
    return 0;
}

/////////////////////////////////////////////////////////// C SCAN
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    
    int arr[n];
    for(int i=0;i<n;i++)
       scanf("%d",&arr[i]);
    
    int head;
    scanf("%d",&head);
    
    int size;
    scanf("%d",&size);
    size--;
    
    int move;
    scanf("%d",&move);
    
    // C-SCAN logic
    
    int count= head;
    int total=0, index;
    double avg=0.0;
    
    if(move==1)
    {
       total += (size-head);
       
       int max=1000;
       for(int i=0;i<n;i++) // for calculating maximum near left head
       {
           if(arr[i]<head && (abs(head-arr[i]))<max)
           {
               max=abs(head-arr[i]);
               index=i;
           }
       }
       
       if(max<count)
         total += size;
        total+=arr[index];
    }
    
    else{
        total += (head);
        
        int min=-10;
        for(int i=0;i<n;i++) // for calculating minimum near right head
        {
           if(arr[i]>head && (abs(head-arr[i]))>min)
           {
               min=arr[i];
               index=i;
           }
        }printf("mmmmmmmm %d\n",arr[index]);
        
        if(min>count)
           total+= arr[index];
            printf("%d\n",total);
    }
    avg=total/n;
    
    printf("%d %f",total,avg);

    return 0;
}
